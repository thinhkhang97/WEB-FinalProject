<head>
    <style>
        #customers {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td,
        #customers th {
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #5B959F;
            color: white;
        }
    </style>
</head>
<table id="customers">
    <tr>
        <th>Mã đơn hàng</th>
        <th>Mã sản phẩm</th>
        <th>Số lượng</th>
        <th>Giá</th>
        <th>Tổng tiền</th>
    </tr>
    {{#each order}}
    <tr>
        <td>{{OrderID}}</td>
        <td>{{ProID}}</td>
        <td>{{Quantity}}</td>
        <td>{{Price}}</td>
        <td>{{Amount}}</td>
    </tr>
    {{/each}}
</table>