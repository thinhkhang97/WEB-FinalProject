<script type="text/javascript">
    $("input[name=gender][value='{{userdetail.gioitinh}}']").prop("checked",true);
    var validate = function () {
        var a = document.getElementById('change_pass');
        if (a.checked == true) {
            if ($('#new_password').val().length === 0) {
                alert('Lỗi mật khẩu');
                return false;
            }
            if ($('#new_password').val() !== $('#re_new_password').val()) {
                alert('Mật khẩu mới không trùng khớp');
                return false;
            }
        }

        return true;
    }
    function passCheck() {
        var a = document.getElementById('change_pass');
        if (a.checked == true)
            document.getElementById('passgroup').setAttribute('style', 'display:block');
        else
            document.getElementById('passgroup').setAttribute('style', 'display:none');
    }
</script> {{/section}}
