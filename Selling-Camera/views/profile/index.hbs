    <script type="text/javascript">
        function passCheck() {
            var a = document.getElementById('change_pass');
            if (a.checked == true)
                document.getElementById('passgroup').setAttribute('style', 'display:block');
            else
                document.getElementById('passgroup').setAttribute('style', 'display:none');
        }
    </script>
