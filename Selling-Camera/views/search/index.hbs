<div class="center_content">

    <form action="" method="POST">
        <div class="form_row" role="form">
            <label class="contact">
                <strong>Nhập tên</strong>
            </label>
            <input type="text" class="contact_input" name="tenSP" />
        </div>
        <div class="form_row">
            <label class="contact">
                <strong>Nhập giá tiền MAX</strong>
            </label>
            <input type="text" class="contact_input" name="giaSP"/>
        </div>
        <br />
        <br />
